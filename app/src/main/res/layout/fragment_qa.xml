<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.android.mobileapp.QAActivity$PlaceholderFragment">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/upvote_button"
        android:src="@drawable/upvote"
        android:layout_weight="0.33"
        android:layout_gravity="right"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/listview_qa_answers"
        android:layout_alignEnd="@+id/listview_qa_answers" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview_qa_answers"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/add_answer"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView2" />

    <!--<ImageButton-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@drawable/upvote"-->
        <!--android:layout_marginLeft="300dp"-->
        <!--android:id="@+id/upvote_button"/>-->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/add_new_answer"
            android:layout_above="@+id/answer_text"
            android:layout_centerHorizontal="true"
            android:id="@+id/add_answer"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/answer_text"
            android:inputType="text"
            android:singleLine="true"/>

    <TextView
        android:text="Question"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="15dip"
        android:textStyle="bold"/>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_below="@id/textView"
        android:layout_height="2dp"
        android:background="@color/main_color_cyan" />

    <TextView
        android:text="Answers"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upvote_button"
        android:layout_marginTop="30dp"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="15dip"
        android:textStyle="bold"/>

    <View
        android:id="@+id/view4"
        android:layout_below="@id/textView2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/main_color_cyan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="New Text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:id="@+id/qa_question"
        android:layout_above="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/upvote_button"
        android:layout_toStartOf="@+id/upvote_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/question_username"
        android:layout_below="@+id/view3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
